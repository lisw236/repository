表管理命令
-- 建表
   create table 库名.表名(         //表名不能和关键字一样???????????
 	字段名1 类型(宽度),             //有逗号
	字段名2 类型(宽度)
   )DEFAULT CHARSET=utf8;       //指定中文字符级,utf8的中文最多
-- 查看表结构
   desc 库名.表名; 
-- 删除表
    drop table 库名.表名;
-- 显示字符级
    show create table 表名;
        ......
	ENGINE=InnoDB DEFAULT CHARSET=utf8

记录管理命令                            
-- 查看表记录
    select * from 库名.表名;                    
-- 插入表记录
    insert into 库名.表名 values("值","值"),("值");            
-- 指定字段插入表记录
    Insert into 库.表(字段,字段,....) values("值","值"),("值");   
                #一个括号代表一行,一个""代表一行的一格   
-- 修改表记录
    update 库名.表名 set 字段=值;     #修改字段下所有的值
-- 删除表记录
    delete from 表名;                  #全部删除,但表还在

-- 表名,表字段不加utf8也能显示中文
-- 要想中文表记录,必须中文级 !!!!!

